{
  "name": "@mediaproc/image",
  "version": "1.1.0",
  "description": "Image processing plugin for mediaproc - powered by Sharp",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mediaproc-image": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "mediaproc",
    "image",
    "sharp",
    "resize",
    "convert",
    "optimize",
    "webp",
    "avif"
  ],
  "author": "Sharique Chaudhary",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest --config ../../jest.config.js",
    "test:watch": "jest --config ../../jest.config.js --watch",
    "test:coverage": "jest --config ../../jest.config.js --coverage",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "ora": "^9.0.0",
    "sharp": "^0.34.5"
  },
  "peerDependencies": {
    "@mediaproc/cli": "^0.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
